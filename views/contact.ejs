<%- include('./partials/header') %>

<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-8 col-sm-12">
       
        <h1>Contact me</h1>

        <form action="/contact" method="POST" class="mt-2"  id="contact-form">

          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" class="form-control" />
          </div>

          <div class="form-group">
            <label for="contactEmail">Email</label>
            <input type="text" name="contactEmail" id="contactEmail" class="form-control" />
          </div>

          <div class="form-group">
            <label for="message">Message</label>
            <textarea
              class="form-control"
              name="message"
              id="message"
              rows="5"
            ></textarea>
          </div>

          <button class="btn btn-lg btn-info">Send</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="../js/validationNEW.js"></script>

<%- include('./partials/footer') %>
